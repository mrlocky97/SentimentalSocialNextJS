{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020"
    }
  },
  "include": [
    "src/server.ts",
    "src/lib/**/*",
    "src/routes/**/*",
    "src/models/**/*",
    "src/repositories/**/*",
    "src/services/**/*"
  ],
  "exclude": ["node_modules", "dist", ".next", "src/app/**/*"]
}
